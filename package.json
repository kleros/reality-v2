  "main": "index.js",
  "repository": "git@github.com:kleros/reality-v2.git",
  "author": {
    "name": "Kleros",
    "email": "contact@kleros.io",
    "url": "https://kleros.io"
  },
  "bugs": {
    "url": "https://github.com/kleros/reality-v2/issues",
    "email": "contact@kleros.io"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "contracts",
    "eslint-config",
    "prettier-config",
    "tsconfig"
